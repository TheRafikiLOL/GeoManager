<label class="form-label" for="{{ id }}">{{ label }}</label>
<select id="{{ id }}" name="{{ name }}" class="form-control select2" data-allow-clear="true" {% if tags is defined and tags %}data-tags="true"{% endif %} multiple="" data-select2-id="select2-data-{{ id }}" tabindex="-1" aria-hidden="true">

{% if options is defined and options is not empty %}

    {% for option in options %}
        <option value="{{ option.id }}" {% if option.selected %}selected{% endif %}>{{ option.text }}</option>
    {% endfor %}

{% endif %}

</select>
{% if error is defined and error is not empty %}
    <ul>
        {% for err in error %}
            <li>{{ err }}</li>
        {% endfor %}
    </ul>
{% endif %}