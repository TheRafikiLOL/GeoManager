<script>
    $(document).ready(function() {
        $('.select2').select2({
            tags:{% if tags is defined and tags %}true{% else %}false{% endif %},
            placeholder: 'Seleccione un valor',
            allowClear: true,
            ajax: {
                url: '{{ url }}',
                dataType: 'json',
                delay: 250,
                processResults: function (data) {
                    return {
                        results: data
                    };
                },
                cache: true
            }
        });
    });
</script>