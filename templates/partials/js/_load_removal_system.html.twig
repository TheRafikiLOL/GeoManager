<script type="text/javascript">

    // Cargar funcionamiento de eliminación por modal
    $('.dataTable').on('click', '.remove-country', function(e) {
        e.preventDefault();

        $table = $(this).closest('.dataTable');

        let deleteUrl = $(this).data('url');
        let csrfToken = $(this).data('token');
        
        loadPageModal("{{ title }}", "{{ message }}", "Cancelar", "secondary", "Eliminar", "danger", function() {

            $.ajax({
                url: deleteUrl,
                type: 'DELETE',
                data: {
                    _token: csrfToken
                },
                success: function(response) {
                    if (response.success) {
                        $table.DataTable().ajax.reload();
                        loadToast("Registro eliminado", "El registro ha sido eliminado.");
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    loadToast("ERROR", "Ocurrió un error. Por favor, inténtelo de nuevo.");
                }
            });

        });
        $('#pageModal').modal('hide');
        
    });

</script>